#!/usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + "/../lib"

require "rubygems"
require "bundler/setup"
require "bots"

cli    = Bots::CLI.new($PROGRAM_NAME, ARGV)
result = cli.run

if result.success?
  state = result.out

  $stdout.puts state.format
  exit 0
else
  $stderr.puts result.out
  exit 1
end
